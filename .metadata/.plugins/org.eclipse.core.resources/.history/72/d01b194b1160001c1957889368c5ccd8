package main;

import java.awt.Color;
import java.awt.Graphics;
import java.awt.Graphics2D;
import java.awt.Image;
import java.awt.image.BufferedImage;
import java.io.File;
import java.io.IOException;

import javax.imageio.ImageIO;

public class Die {
	
	public static String imagesPath = "E:\\Java\\Yatzy\\images\\";
	BufferedImage img;
	int value;
	int posX;
	int posY;
	
	public Die(int _posX, int _posY) {
		posX = _posX;
		posY = _posY;
		roll();
	}
	
	public void setImage(int n) {
		try {
			String file = imagesPath + "die_" + n + ".png";
			img = ImageIO.read(new File(file));
		} catch (IOException e) {
			System.out.println("Filen: " + imagesPath + "die_" + n + ".png" + " finns inte");
			e.printStackTrace();
		}
	}
	
	public void roll() {
		value = (int) Math.ceil(Math.random()*6);
		setImage(value);
	}
	
	public int getValue() {
		return value;
		
	}
	
	public void render(Graphics2D g) {
		g.drawImage(img, posX, posY, 20, 20, null);
	}
}
