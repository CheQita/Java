package main;

import java.awt.Graphics2D;

public class Column {
	Cell[] cells;
	String name;
	int posX;
	int posY;
	int score;
	int nCols = 17;
	
	ScoreBoard parent;
	
	public Column(String _name, int _posX, int _posY, ScoreBoard _parent) {
		name = _name;
		posX = _posX;
		posY = _posY;
		parent = _parent;
				
		Cell nameCell = new Cell(posX, posY);
		nameCell.text = name;
		cells = new Cell[1 + nCols];
		cells[0] = nameCell;
		
		for(int i=1; i< 1 + nCols; i++) {
			cells[i] = new Cell(posX, posY+ (ScoreBoard.colLength*i));
		}
		
		
	}
	
	public void render(Graphics2D g) {
		for(Cell c : cells) {
			c.render(g);
		}
	}
}
