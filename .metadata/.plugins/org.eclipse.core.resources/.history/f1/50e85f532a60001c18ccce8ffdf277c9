package main;

import java.awt.Graphics2D;

public class Column {
	Cell[] cells;
	String name;
	int posX;
	int posY;
	int score;
	int nCols = 17;
	Option[] options;

	
	public Column(String _name, int _posX, int _posY) {
		name = _name;
		posX = _posX;
		posY = _posY;
		options = new Option[] {
				Option.ETTOR,
				Option.TVÅOR,
				Option.TREOR,
				Option.FYROR,
				Option.FEMMOR,
				Option.SEXOR,
				Option.PAR,
				Option.TVÅ_PAR,
				Option.TRISS,
				Option.FYRTAL,
				Option.KÅK,
				Option.LITEN_STEGE,
				Option.STOR_STEGE,
				Option.CHANS,
				Option.YATSY,
				Option.SUMMA,
				
		};

					
		
	}
	void addCells() {
		Cell nameCell = new Cell(posX, posY, ScoreBoard.colWidth, ScoreBoard.cellLength);
		nameCell.setText(name);
		nameCell.setEnabled(false);
		cells = new Cell[1 + nCols];
		cells[0] = nameCell;
		for(int i=1; i< 1 + nCols; i++) {
			cells[i] = new Cell(posX, posY+ (ScoreBoard.cellLength*i), ScoreBoard.colWidth, ScoreBoard.cellLength);
		}
	}
	
	public void render(Graphics2D g) {
		for(Cell c : cells) {
			c.render(g);
		}
	}
}
