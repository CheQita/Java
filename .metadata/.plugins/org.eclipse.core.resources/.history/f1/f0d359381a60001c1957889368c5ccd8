package main;

import java.awt.Graphics2D;

public class Column {
	Cell[] cells;
	String name;
	int posX;
	int posY;
	int score;
	int nCols = 17;
	
	public Column(String _name, int _posX, int _posY) {
		posX = _posX;
		posY = _posY;
		name = _name;
		Cell nameCell = new Cell(posX, posY);
		nameCell.text = name;
		cells = new Cell[1 + nCols];
		cells[0] = nameCell;
		
		for(int i=1; i< 1 + nCols; i++) {
			cells[i] = new Cell();
		}
		
		
	}
	
	public void render(Graphics2D g) {
		
	}
}
