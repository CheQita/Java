package main;

import java.awt.Graphics2D;

public class Player {
	String name;
	Die[] dice;
	public Player(String _name) {
		name = _name;
		dice = new Die[5];
		for(int i=0; i<dice.length; i++) {
			dice[i] = new Die(350 + (i* 50), 50, i+1);
			
		}
	}
	
	public void rollDice() {
		for(Die d : dice) {
			d.roll();
		}
	}
	
	public void renderDice(Graphics2D g) {
		for(Die d : dice) {
			d.render(g);
		}
	}
	
}
